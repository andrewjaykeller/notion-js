{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "dist/typings",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "stripInternal": true,
    "strict": false,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist", "examples"]
}
